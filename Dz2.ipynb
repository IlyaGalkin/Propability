    "def n3(n, k, sim_num=10):\n",
    "    succ = 0\n",
    "    for i in range(sim_num):\n",
    "        res_list = [random.randint(1, 6) for _ in range(n)]\n",
    "        if sum(res_list) <= k:\n",
    "            succ += 1\n",
    "            print(res_list)\n",
    "    print(\"{}/{}\".format(succ, sim_num))\n",
